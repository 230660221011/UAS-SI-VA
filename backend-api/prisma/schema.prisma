// File: prisma/schema.prisma

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  bookings  Booking[] // Relasi: Satu User bisa punya banyak Booking
  createdAt DateTime  @default(now())
}

model Booking {
  id           Int      @id @default(autoincrement())
  packageType  String
  location     String
  duration     String   // Pastikan ini ada
  peopleCount  Int      // Pastikan ini ada
  bookingDate  DateTime
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
}